<%- include("head.ejs") %>
<body>
    <main>
        <h1>
            <%= a %>
        </h1>
        <ul id="tanks">
            <% data.forEach(function(tank){ %>
                <li>
                    <%= tank.nation %> - <%= tank.name %> - <%= tank.number %>
                </li>
                <% }) %>
        </ul>
        <div>
            <h3>New tank</h3>
            <form action="/all/tankmuseum/new" method="POST">
                <div>
                    <input type="text" name="nation" id="nation" required minlength="1" maxlength="500" placeholder="Nation"/>
                    <input type="text" name="name" id="name" required minlength="1" maxlength="500" placeholder="Name"/>
                    <input type="number" name="number" id="number" required minlength="1" maxlength="500" placeholder="Number" />
                </div>
                <div>
                    <button>Add tank to museum</button>
                </div>
            </form>
        </div>
        <br><br><br>
        <hr>
        <h1>OR</h1>
        <br>
        <button onclick="location.href='/all/tankmuseum/edit'"><b>Edit tanks in the museum</b></button>
    </main>
</body>
</html>
<form action="/all/tankmuseum/new" method="POST">
    <div>
      <input
        type="text"
        name="country"
        id="country"
        required
        minlength="1"
        maxlength="500"
        placeholder="Nation"
      />

      <input
        type="text"
        name="tankName"
        id="tankName"
        required
        minlength="1"
        maxlength="500"
        placeholder="Name"
      />
    </div>
    <div>
      <button>Add tank to museum</button>
    </div>
  </form>